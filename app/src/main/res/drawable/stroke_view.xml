        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/strokeWidthCommentButtons"
                android:color="?attr/colorPrimaryDark" />
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/strokeWidthCommentButtons"
