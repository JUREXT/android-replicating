        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/strokeWidthCommentButtons"
                android:color="?attr/colorPrimary" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>
